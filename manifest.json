{
  "manifest_version": 3,
  "name": "smartTab",
  "version": "0.1",
  "description": "Retrieves the current open tab, sends the title and URL to a large language model for reorganization, and groups the tabs based on the model's response.",
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab"
  ],
  "host_permissions": [
    "https://idealab.alibaba-inc.com/*",
    "https://idealab.alibaba-inc.com/api/openai/v1/chat/completions"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}